{% extends 'base.html.twig' %}

{% block title %}Przywracanie hasła{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="alert alert-info" role="alert">Podaj swój adres e-mail, a my wyślemy
    Tobie odnośnik umożliwiający zresetowanie hasła.</div>
    {{ form_start(requestForm, {'attr': {'class': 'row g-3'}}) }}
        <fieldset class="col col-lg-6 mx-auto">
        {{ form_row(requestForm.email, { 'label_attr': {'class': 'form-label' }
            , 'attr': {'class': 'form-control border bg-light' }
        }) }}

        {{ form_row(requestForm.captcha ,{label: ' '} ) }}

        <button class="btn btn-primary">Zatwierdzam</button>
        </fieldset>
    {{ form_end(requestForm) }}
{% endblock %}
