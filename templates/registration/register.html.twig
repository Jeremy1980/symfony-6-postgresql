{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'row g-3'}}) }}
        <fieldset class="col col-lg-6 mx-auto">
        {{ form_row(registrationForm.name, {
            label: 'Nazwa konta', 'label_attr': {'class': 'form-label' }
            , 'attr': {'class': 'form-control border bg-light' }
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adres email', 'label_attr': {'class': 'form-label' }
            , 'attr': {'class': 'form-control border bg-light' }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Hasło', 'label_attr': {'class': 'form-label' }
            , 'attr': {'class': 'form-control border bg-light' }
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Akceptuje regulamin'
        }) }}

        {{ form_row(registrationForm.captcha ,{label: ' '} ) }}

        <button type="submit" class="btn btn-primary">Utwórz konto</button>
        </fieldset>
    {{ form_end(registrationForm) }}
{% endblock %}